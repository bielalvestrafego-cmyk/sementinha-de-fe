---
const CTA_LINK = "#oferta";

const prints = [
  { src: "/depoimentos/whatsapp-fernanda.png", alt: "Depoimento da Fernanda — mãe emocionada com filho pedindo historinha de Deus" },
  { src: "/depoimentos/whatsapp-marlene.png", alt: "Depoimento da Dona Marlene — avó usando com 4 netos" },
  { src: "/depoimentos/whatsapp-prof_claudia.png", alt: "Depoimento da Prof. Cláudia — professora de escola dominical há 12 anos" },
  { src: "/depoimentos/whatsapp-pra_renata.png", alt: "Depoimento da Pastora Renata — usando no culto kids" },
  { src: "/depoimentos/whatsapp-pri.png", alt: "Depoimento da Pri — mãe solo fazendo devocional em 5 minutos" },
  { src: "/depoimentos/whatsapp-ir_lucia.png", alt: "Depoimento da Irmã Lúcia — adaptando para catequese" },
];
---

<section class="bg-cream-dark px-5 py-10 sm:px-8 md:py-14">
  <h2 class="mb-2 text-center text-xl font-bold text-brown-dark sm:text-2xl md:text-3xl">
    ❤️ Veja o que mães, avós e professoras estão dizendo
  </h2>
  <p class="mb-8 text-center text-sm text-brown-light sm:text-base">
    Mais de 2.000 famílias já estão usando
  </p>

  <div class="mx-auto grid max-w-3xl grid-cols-1 gap-4 sm:grid-cols-2">
    {prints.map((print) => (
      <div class="overflow-hidden rounded-2xl bg-white shadow-md">
        <img
          src={print.src}
          alt={print.alt}
          loading="lazy"
          decoding="async"
          class="h-auto w-full"
        />
      </div>
    ))}
  </div>

  <!-- CTA -->
  <div class="mt-8 text-center">
    <a
      href={CTA_LINK}
      class="inline-block w-full max-w-sm rounded-2xl bg-cta px-8 py-4 text-base font-bold text-white uppercase shadow-[0_6px_20px_rgba(37,211,102,0.4)] transition-all hover:bg-cta-dark hover:shadow-[0_8px_25px_rgba(37,211,102,0.5)] active:scale-95 sm:text-lg"
    >
      QUERO PLANTAR ESSA SEMENTE TAMBÉM!
    </a>
  </div>
</section>
